@model Auth.Quickstart.Account.LoginSignupViewModel


<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" @(Model.NewUser?"checked='checked'":"")><label for="tab-1" class="tab">Sign In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up" @(!Model.NewUser?"checked='checked'":"")><label for="tab-2" class="tab">Sign Up</label>
		<div class="login-form">
			<form class="sign-in-htm" asp-action="Login" method="post">
				<input type="hidden" asp-for="LoginViewModel.ReturnUrl" />

                <div class="group">
                    <label asp-for="LoginViewModel.Login" class="label">Username/Email</label>
                    <input asp-for="LoginViewModel.Login" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="LoginViewModel.Password" class="label">Password</label>
                    <input asp-for="LoginViewModel.Password" type="password" autocomplete="off" class="input" data-type="password">
                </div>
                <div class="group">
                    <input asp-for="LoginViewModel.RememberLogin" class="check" checked>
                    <label asp-for="LoginViewModel.RememberLogin"><span class="icon"></span> Keep me Signed in</label>
                </div>
                <div class="group">
                    <button class="button" name="button" value="login">Login</button>
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <a href="#forgot">Forgot Password?</a>
                </div>
                <div class="google-btn-wrapper">
                    <a class="btn btn-secondary"
                       asp-controller="External"
                       asp-action="Challenge"
                       asp-route-scheme="Google"
                       asp-route-returnUrl="@Model.LoginViewModel.ReturnUrl">
                        Sign in with Google
                    </a>
                </div>
			</form>
            <form class="sign-up-htm" asp-action="Signup" method="post">
                <input type="hidden" asp-for="SignupViewModel.ReturnUrl" />
                
                <div class="group">
                    <label asp-for="SignupViewModel.Username" class="label">Username/Email</label>
                    <input asp-for="SignupViewModel.Username" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="SignupViewModel.Email" class="label">Email</label>
                    <input asp-for="SignupViewModel.Email" type="text" class="input">
                </div>
                <div class="group">
                    <label asp-for="SignupViewModel.Password" class="label">Password</label>
                    <input asp-for="SignupViewModel.Password" type="password" autocomplete="off" class="input" data-type="password">
                </div>
                <div class="group">
                    <label asp-for="SignupViewModel.RepeatPassword" class="label">Repeat Password</label>
                    <input asp-for="SignupViewModel.RepeatPassword" type="password" autocomplete="off" class="input" data-type="password">
                </div>
                <div class="group">
                    <button class="button" name="button" value="signup">Sign up</button>
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <label for="tab-1">Already Member?</label>
                </div>
            </form>
		</div>
	</div>
</div>